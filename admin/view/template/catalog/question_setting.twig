{{ header }}{{ column_left }} 
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-question-setting" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %} 
        <li><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
        {% endfor %} 
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ heading_title }}</h3>
      </div>
      <div class="panel-body">
        <form method="post" enctype="multipart/form-data" id="form-question-setting" class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-question_setting_status">
            <span data-toggle="tooltip" title="{{ help_global_status }}">{{ entry_global_status }}</span>
            </label>
            <div class="col-sm-10">
              <select name="product_question_status" id="input-product_question_status" class="form-control">
                {% if (product_question_status) %} 
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %} 
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %} 
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-product_question_default_status">
            <span data-toggle="tooltip" title="{{ help_default_status }}">{{ entry_default_status }}</span>
            </label>
            <div class="col-sm-10">
              <select name="product_question_default_status" id="input-product_question_default_status" class="form-control">
                {% if (product_question_default_status) %} 
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %} 
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %} 
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-product_question_allow_private">
            <span data-toggle="tooltip" title="{{ help_allow_private }}">{{ entry_allow_private }}</span>
            </label>
            <div class="col-sm-10">
              <select name="product_question_allow_private" id="input-product_question_allow_private" class="form-control">
                {% if (product_question_allow_private) %} 
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %} 
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %} 
              </select>
            </div>
          </div>
         <div class="form-group">
            <label class="col-sm-2 control-label" for="input-product_question_allow_private">
            <span data-toggle="tooltip" title="{{ help_questions_per_page }}">{{ entry_questions_per_page }}</span>
            </label>
            <div class="col-sm-10">
              <input type="text" class="form-control" value="{{ product_question_per_page }}" name="product_question_per_page" />
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-product_question_notify">
            <span data-toggle="tooltip" title="{{ help_admin_notify }}">{{ entry_admin_notify }}</span>
            </label>
            <div class="col-sm-10">
              <select name="product_question_notify" id="input-product_question_notify" class="form-control">
                {% if (product_question_notify) %} 
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %} 
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %} 
              </select>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
  </div>
{{ footer }}